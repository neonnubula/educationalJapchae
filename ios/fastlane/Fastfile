default_platform(:ios)

platform :ios do
  desc "Upload the built IPA to TestFlight"
  lane :upload_testflight do
    api_key = app_store_connect_api_key(
      key_id:      ENV["ASC_KEY_ID"],
      issuer_id:   ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_API_KEY_P8"],
      in_house:    false
    )

    # Xcode 15 may place the exported IPA inside a timestamped folder, so
    # search recursively under build/export.
    ipa_path = Dir["../build/export/**/*.ipa"].first
    UI.user_error!("No IPA found in ../build/export") unless ipa_path

    pilot(
      api_key: api_key,
      ipa:     ipa_path,
      skip_waiting_for_build_processing: true
    )
  end
end 